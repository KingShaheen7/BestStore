@model RequestItemsDto

@{
}
<div class="row">
	<div class="col-md-8 mx-auto rounded border p-3">
		<h2 class="text-center mb-5">Edit Quantity</h2>
		<form method="post" enctype="multipart/form-data">

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Name</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Name" readonly />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Price</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Price" readonly />
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Quantity</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Cuantity" type="number" min="1" required />
					<span asp-validation-for="Cuantity" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<div class="offset-sm-4 col-sm-8">
					<img src="/Products/@ViewData["ImageFileName"]" width="150" />
				</div>
			</div>

			<div class="row">
				<div class="offset-sm-4 col-sm-4 d-grid">
					<button type="submit" class="btn btn-primary">Edit</button>
				</div>
				<div class="col-sm-4 d-grid">
					<a class="btn btn-outline-primary" asp-controller="Cart" asp-action="ShowCart" role="button">Cancel</a>
				</div>
			</div>

		</form>
	</div>
</div>
