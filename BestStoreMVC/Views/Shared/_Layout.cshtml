@{
    var userEmail = Context.Session.GetString("UserEmail");
    if (userEmail == null)
    {
        userEmail = ViewContext.HttpContext.Request.Cookies["UserEmail"];
    }

    // Get the current controller and action names
    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BestStoreMVC</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BestStoreMVC.styles.css" asp-append-version="true" />

    <!-- Ionicons -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</head>
<body>

    @if (currentController != "Users" || currentAction != "LogIn")
    {
        <header>
            <!-- =============== Navigation ================ -->
            <div class="container1">
                <div class="navigation">
                    <ul>
                        <li>
                            <a href="#">
                                <span class="icon">
                                    <ion-icon name="cart-outline"></ion-icon>
                                </span>
                                <span class="title">Best Store</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Home" asp-action="Index">
                                <span class="icon">
                                    <ion-icon name="home-outline"></ion-icon>
                                </span>
                                <span class="title">Main</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Products" asp-action="Phones">
                                <span class="icon">
                                    <ion-icon name="phone-portrait-outline"></ion-icon>
                                </span>
                                <span class="title">Phones</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Products" asp-action="Laptops">
                                <span class="icon">
                                    <ion-icon name="laptop-outline"></ion-icon>
                                </span>
                                <span class="title">Laptops</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Products" asp-action="Screens">
                                <span class="icon">
                                    <ion-icon name="desktop-outline"></ion-icon>
                                </span>
                                <span class="title">Screens</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Products" asp-action="Admin">
                                <span class="icon">
                                    <ion-icon name="cog-outline"></ion-icon>
                                </span>
                                <span class="title">Management</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <span class="icon">
                                    <ion-icon name="help-outline"></ion-icon>
                                </span>
                                <span class="title">Help</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Users" asp-action="LogOut">
                                <span class="icon">
                                    <ion-icon name="log-out-outline"></ion-icon>
                                </span>
                                <span class="title">Sign Out</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="main">
                <div class="topbar">
                    <div class="search">
                        <label>
                            <input type="text" placeholder="Search here">
                            <ion-icon name="search-outline"></ion-icon>
                        </label>
                    </div>
                    <div class="row">
                        <a class="col btn btn-primary btn-sm" asp-controller="Cart" asp-action="ShowCart" title="Your Cart">
                            <ion-icon style="width:30px; height:30px; float:left;" name="cart-outline"></ion-icon>
                        </a>
                        <div class="col user" style="margin-left: 20px;margin-right: 20px;">
                            <img src="/Products/user_image.png" alt="@userEmail" title="@userEmail">
                        </div>
                    </div>
                </div>
            </div>
        </header>
    }

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        @RenderSection("Scripts", required: false)
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
